<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Skeere</title>
  <link rel="stylesheet" href="../styles/checkout.css">
  <link rel="stylesheet" href="../styles/style.css">
  <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
  <%- include('header.ejs') %>
    <div class="Main">
      <div class="row">
        <div class="col-6">
          <table>
            <thead>
              <tr>
                <td>#</td>
                <td></td>
                <td>Producto</td>
                <td>Talla</td>
                <td>Precio</td>
                <td>Acción</td>
              </tr>
            </thead>
            <tbody id="items-body">

            </tbody>
          </table>
        </div>
        <div class="col-6">
          <form class="row g-3" method="post" action="/confirm-checkout">
            <div class="col-md-6">
              <label for="inputName" class="form-label">Nombre</label>
              <input type="text" class="form-control" id="inputPassword4" name="name" required>
            </div>
            <div class="col-md-6">
              <label for="inputEmail4" class="form-label">Email</label>
              <input type="email" class="form-control" id="inputEmail4" name="email" required>
            </div>
            <div class="col-12">
              <label for="inputAddress" class="form-label">Dirección<nav></nav></label>
              <input type="text" class="form-control" id="inputAddress" name="address" placeholder="1234 Main St"
                required>
            </div>
            <div class="col-12">
              <label for="inputAddress2" class="form-label">Teléfono</label>
              <input type="text" class="form-control" id="phone" name="phone" placeholder="+573017769002" required>
            </div>
            <div class="col-md-6">
              <label for="inputCity" class="form-label">Ciudad</label>
              <input type="text" class="form-control" id="inputCity" name="city" required>
            </div>
            <div class="col-md-6">
              <label for="inputState" class="form-label">Departamento</label>
              <input type="text" class="form-control" id="departamento" name="departamento" required>
            </div>
            <div class="col-12">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck" required>
                <label class="form-check-label" for="gridCheck">
                  Autorizo el tratamiento de mis datos
                </label>
              </div>
            </div>
            <div class="col-6"><strong>Total:</strong></div>
            <div class="col-6"><strong><span id="total"></span></strong></div>
            <input type="hidden" name="products" id="input-products">
            <div class="col-12 d-grid gap-2">


              <button type=" submit" class="btn btn-success" onClick="resetStorage()">
                Confirmar Pedido</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script src="../js/checkout.js"></script>
</body>